<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgerShopOrdering.Pages.HomePage"
             Title="Home"
             Shell.NavBarIsVisible="False">
    
    <VerticalStackLayout BackgroundColor="#FCFAEF">
        <Grid HeightRequest="150">
            <Image Source="frietenheader.png"
               Aspect="AspectFill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand"
               Opacity="0.6"/>
            <Label Text="Ashley's Fritje"
               TextColor="#B83C3C"
               FontSize="40"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Padding="10" 
               FontFamily="Merienda"/>
        </Grid>

        <VerticalStackLayout Padding="20" Spacing="0">
            <Label Text="Frituurstraat 123, 1000 Brussel"
               TextColor="Black"
               FontSize="Medium"
               FontAttributes="Bold"
               HorizontalOptions="Start"
               Margin="0,20,0,10"/>
            <Label Text="Openingsuren: "
               TextColor="Black"
               FontSize="Medium"
               FontAttributes="Italic"
               HorizontalOptions="Start"
               Margin="0,0,0,5"/>
            <Label Text="Maandag: gesloten"
               TextColor="Black"
               FontSize="15"
               FontAttributes="Italic"
               HorizontalOptions="Start"/>
            <Label Text="Dinsdag: gesloten"
               TextColor="Black"
               FontSize="15"
               FontAttributes="Italic"
               HorizontalOptions="Start"/>
            <Label Text="Woensdag: 17:00 - 22:00 "
               TextColor="Black"
               FontSize="15"
               FontAttributes="Italic"
               HorizontalOptions="Start"/>
            <Label Text="Donderdag: 17:00 - 22:00 "
               TextColor="Black"
               FontSize="15"
               FontAttributes="Italic"
               HorizontalOptions="Start"/>
            <Label Text="Vrijdag: 17:00 - 22:00 "
               TextColor="Black"
               FontSize="15"
               FontAttributes="Italic"
               HorizontalOptions="Start"/>
            <Label Text="Zaterdag: 17:00 - 22:00 "
               TextColor="Black"
               FontSize="15"
               FontAttributes="Italic"
               HorizontalOptions="Start"/>
            <Label Text="Zondag: 17:00 - 22:00 "
               TextColor="Black"
               FontSize="15"
               FontAttributes="Italic"
               HorizontalOptions="Start"/>

            <Button Text="Start bestelling"
                BackgroundColor="#D9CAB8"
                TextColor="Black"
                BorderColor="Black"
                BorderWidth="1"
                CornerRadius="5"
                FontAttributes="Bold"
                HorizontalOptions="FillAndExpand"
                Margin="0,30,0,30"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>